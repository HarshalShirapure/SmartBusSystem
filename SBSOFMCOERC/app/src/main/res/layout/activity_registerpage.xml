<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/register_back"
        >
        <ImageView
            android:id="@+id/backarrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_marginRight="350dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="welcome"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="160dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SignUp"
            android:textSize="26dp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="155dp"
            />
        <EditText
            android:id="@+id/Fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Full name"
            android:textSize="16dp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:inputType="text"
            android:layout_marginTop="120dp"
            />

        <EditText
            android:id="@+id/Mobileno1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Mobile no 1"
            android:textColorHint="@color/white"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:inputType="phone"
            android:layout_marginTop="180dp"
            />

        <EditText
            android:id="@+id/Mobileno2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Mobile no 2"
            android:inputType="phone"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_marginTop="230dp"
            />

        <Button
            android:id="@+id/selectimg"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:layout_centerHorizontal="true"
            android:textSize="16dp"
            android:text="select College ID"
            android:textColor="@color/black"
            />
        <Button
            android:id="@+id/Upload"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="360dp"
            android:layout_centerHorizontal="true"
            android:text="Upload"
            android:textSize="16dp"
            android:textColor="@color/black"
            />


        <AutoCompleteTextView
            android:id="@+id/yearbranch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="select year and branch"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:inputType="text"
            android:textSize="16dp"
            android:layout_marginTop="440dp"/>


        <AutoCompleteTextView
            android:id="@+id/pickup_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="select The pickuppoint"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:inputType="text"
            android:textSize="16dp"
            android:layout_marginTop="510dp"/>

        <AutoCompleteTextView
            android:id="@+id/total_installment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="select The root"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:inputType="text"
            android:layout_marginTop="650dp"/>

        <TextView
            android:id="@+id/Bus_Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Selected Bus For Root"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:inputType="text"
            android:layout_marginTop="600dp"/>

        <EditText
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Email"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="textEmailAddress"
            android:layout_marginTop="720dp"/>

        <EditText
            android:id="@+id/pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="create password"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="textPassword"
            android:layout_marginTop="780dp"/>

        <EditText
            android:id="@+id/repw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="re-enter password"
            android:textColorHint="@color/white"
            android:inputType="textPassword"
            android:layout_marginTop="840dp"
            />

        <Button
            android:id="@+id/register"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="900dp"
            android:layout_centerHorizontal="true"
            android:text="Register"
            android:textColor="@color/black"
            />

        <Button
            android:id="@+id/alreadyaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="950dp"
            android:layout_centerHorizontal="true"
            android:text="already have an account? Login"
            android:textStyle="bold"
            android:backgroundTint="#ffff"
            android:textColor="@color/black"
            />
    </RelativeLayout>
</ScrollView>