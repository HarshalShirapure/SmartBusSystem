<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_baseline_directions_bus_24"
    tools:context=".DriverInterface">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/ToolBardriverinterface"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/td"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DriverInterface"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/tdriver"
                    android:layout_marginTop="10dp" />
                    <ImageView
                        android:id="@+id/tdriver"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:src="@drawable/driver_request"/>
                <ImageView
                    android:id="@+id/tscanner"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:src="@drawable/ic_baseline_qr_code_scanner_24"
                    android:layout_toRightOf="@id/td"
                    android:layout_marginLeft="90sp"
                    android:layout_centerInParent="true"/>

                <ImageView
                    android:id="@+id/tlogout"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:src="@drawable/ic_baseline_logout_24"
                    android:layout_marginLeft="330sp"
                    android:layout_marginTop="8dp"
                    />
            </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
